<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingBottom="7dp"
    android:paddingTop="7dp"
    android:orientation="horizontal">
    <com.tencent.qcloud.ui.CircleImageView
        android:id="@id/avatar"
        android:layout_width="@dimen/item_img_width"
        android:layout_height="@dimen/item_img_width"
        android:layout_marginLeft="@dimen/item_margin_left" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/item_name_size"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginTop="3dp"
            android:textSize="@dimen/item_message_size"
            android:textColor="@color/text_gray4"/>
    </LinearLayout>
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@drawable/bg_status"
        android:layout_marginRight="@dimen/item_margin_right"/>

</LinearLayout>