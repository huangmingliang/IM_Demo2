<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_layout"
    android:orientation="vertical">

    <include
        android:id="@+id/contactSearch"
        layout="@layout/include_item_search" />

    <LinearLayout
        android:id="@+id/newFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="7dp"
            android:paddingTop="7dp">

            <com.tencent.qcloud.ui.CircleImageView
                android:id="@+id/friendImg1"
                android:layout_width="@dimen/item_img_width"
                android:layout_height="@dimen/item_img_width"
                android:src="@drawable/new_friend" />

            <TextView
                android:id="@+id/friendName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_margin_left"
                android:text="@string/conversation_system_friend"
                android:textColor="@color/black"
                android:textSize="@dimen/title_txt_size" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line_size"
        android:background="@color/transparent" />

    <LinearLayout
        android:id="@+id/group_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="7dp"
            android:paddingTop="7dp">

            <com.tencent.qcloud.ui.CircleImageView
                android:id="@+id/friendImg2"
                android:layout_width="@dimen/item_img_width"
                android:layout_height="@dimen/item_img_width"
                android:src="@drawable/group_chat" />

            <TextView
                android:id="@+id/friendName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_margin_left"
                android:text="@string/group"
                android:textColor="@color/black"
                android:textSize="@dimen/title_txt_size" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>